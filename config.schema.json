{
    "pluginAlias": "FGLairThermostat",
    "pluginType": "accessory",
    "singular": false,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "required": true,
                "default": "Fujitsu Mini Split",
                "description": "The name that will appear in the Home App and your homebridge log."
            },
            "username": {
                "title": "Username",
                "type": "string",
                "required": true,
                "default": "Fujitsu Mini Split",
                "description": "Username for FGLair App"
            },
            "password": {
                "title": "Username",
                "type": "string",
                "required": true,
                "default": "Fujitsu Mini Split",
                "description": "Username for FGLair App"
            },
            "interval": {
                "title": "Update Interval",
                "type": "string",
                "required": false,
                "default": "60",
                "description": "Polling time in seconds"
            },
            "region": {
                "title": "Region",
                "type": "string",
                "default": "us",
                "required": true,
                "oneOf": [
                    {
                        "title": "U.S.",
                        "const": "us"
                    },
                    {
                        "title": "Europe",
                        "const": "eu"
                    },
                    {
                        "title": "China",
                        "const": "cn"
                    }
                ]
            }

        }
    }
}
